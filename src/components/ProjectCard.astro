---
const {
  slug,
  title,
  description,
  year,
  tags,
  heroImage,
} = Astro.props;
---

<a
  href={`/projects/${slug}/`}
  class="block rounded-xl border border-white/10 p-5 hover:border-white/30 transition"
>
  {heroImage && (
    <img
      src={heroImage}
      alt={title}
      class="mb-4 rounded-lg brightness-110"
    />
  )}

  <h3 class="text-2xl font-semibold">{title}</h3>

  {description && (
    <p class="mt-2 opacity-80">{description}</p>
  )}

  <div class="mt-3 flex flex-wrap gap-2 text-sm opacity-70">
    {year && <span>{year}</span>}
    {tags?.length && <span>• {tags.join(" · ")}</span>}
  </div>
</a>
